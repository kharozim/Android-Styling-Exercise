<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:src="@drawable/shr_logo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_main_num1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Number one" />

    <Button
        android:id="@+id/bt_main_num2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Number two" />

    <Button
        android:id="@+id/bt_main_num3"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Number three" />

    <Button
        android:id="@+id/bt_main_num4"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Number Four" />

</LinearLayout>